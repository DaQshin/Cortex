{
  "manifest_version": 3,
  "name": "Cortex",
  "version": "1.0.0",
  "description": "AI-powered Collective Memory",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "My Collective Memory"
  }
}
